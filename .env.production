# Production Environment Variables
# Copy this file to .env and fill in the actual values

# JWT Secret - Generate a strong random secret
JWT_SECRET=your-super-strong-jwt-secret-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
REACT_APP_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key_here

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# API Configuration
REACT_APP_API_URL=https://yourdomain.com/api
CORS_ORIGIN=https://yourdomain.com

# Company Configuration
REACT_APP_APP_NAME=Your Company Name
REACT_APP_COMPANY_NAME=Your Company LLC
REACT_APP_COMPANY_EMAIL=info@yourdomain.com
REACT_APP_COMPANY_PHONE=(555) 123-4567

# Optional: Analytics and Monitoring
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn-here