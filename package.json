{
  "name": "bounce-house-rental-system",
  "version": "1.0.0",
  "description": "Multi-tenant bounce house rental platform with comprehensive testing",
  "private": true,
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "install:all": "npm install && npm install --prefix server && npm install --prefix client",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd server && npm test",
    "test:frontend": "cd client && npm test -- --watchAll=false",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd server && npm run build",
    "build:frontend": "cd client && npm run build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd server && npm run dev",
    "dev:frontend": "cd client && npm start",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "validate": "npm run lint && npm run test && npm run build",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/build coverage",
    "security-audit": "npm audit && cd server && npm audit && cd ../client && npm audit",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:related": "jest --bail --findRelatedTests",
    "lint": "eslint src/**/*.{js,ts} --quiet",
    "lint:fix": "eslint src/**/*.{js,ts} --quiet --fix",
    "seed": "ts-node src/scripts/seed.ts",
    "create-token": "ts-node src/scripts/createAdminToken.ts"
  },
  "lint-staged": {
    "server/**/*.{js,ts}": [
      "bash -c 'cd server && npm test -- --passWithNoTests'"
    ],
    "client/**/*.{js,jsx,ts,tsx}": [
      "bash -c 'cd client && npm test -- --watchAll=false --passWithNoTests'"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/bounce-house-rental-system.git"
  },
  "keywords": [
    "bounce-house",
    "rental",
    "multi-tenant",
    "react",
    "node.js",
    "express",
    "mongodb",
    "stripe",
    "testing"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT"
}
